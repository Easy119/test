/* pages/box/box.wxss */

.content {
  width: 100%;
  height: 100vh;
  position: relative;
  transform-origin: center;
}

.content .img_box {
  width: 250px;
  height: 200px;
   position: absolute;
}

.content .box {
  width: 200px;
  height: 200px;
  display: block;
  transform-origin: center;
   position: absolute;
  float: left
}
.close{
  width: 50px;
  height: 50px;
  background-color: blue;
  float: left;
  display: block;
  text-align: center;
  color: #ffffff;
}
.show{
  display: block
}
