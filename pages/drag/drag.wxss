/* pages/drag/drag.wxss */

.content {
  position: relative;
  width: 100%;
  height: 100%;
}

.item-group {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.move-item-group {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1111;
}

.item {
  width: 100px;
  height: 100px;
  text-align: center;
  border: 1px saddlebrown solid;
  line-height: 50px;
  float: left;
}
 
.move-item {
  width: 102px;
  height: 102px;
  position: relative;
  float: left;
}
 